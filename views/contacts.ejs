<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>CONTACT PAGE</title>
  </head>
  <style media="screen">
  .table_data{
    border: 2px solid #000;
  }
  </style>
  <body>
    <h2>Data Contacts Owner Company</h2>

    <div class="form_data">
        <h3>Tambah Data</h3>
        <form class="" action="/contacts" method="post">
          <p>Input Owner Name :</p>
          <input type="text" name="ownerName" >
          <p>Input Company Name :</p>
          <input type="text" name="company" >
          <p>Input Own :</p>
          <input type="tel" name="telpComp" >
          <p>Input Company Email :</p>
          <input type="email" name="emailCompany" ><br>
          <button type="submit" name="button">Submit</button>
        </form>
    </div>

    <div class="table_data">
      <table>
        <thead>
          <tr>
            <th>ID</th>
            <th>Owner</th>
            <th>Company Name</th>
            <th>Telephone Number</th>
            <th>Company Email</th>
            <th>Action</th>
          </tr>
        </thead>
        <tbody>
          <% data.forEach(contacts => { %>
            <tr>
              <td> <%= contacts.id %></td>
              <td> <%= contacts.name %></td>
              <td> <%= contacts.company %></td>
              <td> <%= contacts.telp_number %></td>
              <td> <%= contacts.email %></td>
              <td> <a href="/contacts/edit/:id">Edit</a> <a href="/contacts/delete/:id">Delete</a></td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    </div>

  </body>
</html>
