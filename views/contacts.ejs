<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>contacts</title>
    <link rel="stylesheet" href="/style.css">
  </head>
  <body>
    <!-- <%= JSON.stringify(data_contact) %> -->
    <form class="" action="contacts" method="post">
      <fieldset>
        <legend>Input Data Contact</legend>
        <b>Nama : </b><br>
        <input type="text" name="nama" value=""> <br><br>
        <b>Company : </b><br>
        <input type="text" name="company" value=""> <br><br>
        <b>Phone : </b><br>
        <input type="text" name="phone" value=""> <br><br>
        <b>Email : </b><br> 
        <input type="text" name="email" value=""> <br><br>
        <br>
        <input type="submit" value="SUBMIT">
      </fieldset>
    </form>
    <table style="table">      
      <tr style="tr">
        <th style="th">Nomor</th>
        <th style="th">Nama</th>        
        <th style="th">Company</th>  
        <th style="th">Phone</th>        
        <th style="th">Email</th>    
        <th style="th" colspan="2">Action</th>     
      </tr>
      
      <br>
      
      <% data_contact.forEach(contact => { %>     
      <tr style="tr">
        <td style="td"><%= contact.id %></td>
        <td style="td"><%= contact.name %></td>        
        <td style="td"><%= contact.company %></td>  
        <td style="td"><%= contact.telp_number %></td>        
        <td style="td"><%= contact.email %></td> 
        <td style="td"><a href="/contacts/edit/<%= contact.id%>" >EDIT</a></td>
        <td style="td"><a href="/contacts/delete/<%= contact.id%>" style="color:red" onclick="return confirm('Are you sure want to delete this record?')">DELETE</a></td>
      </tr>
      <% }) %>
      
    </table>
  </body>
</html>