<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Groups Page</title>
  </head>
  <body>
    <div class="form_data">
        <h3>Tambah Data Groups</h3>
        <form class="" action="/groups" method="post">
          <p>Input Nama Groups :</p>
          <input type="text" name="nameGroups" ><br>
          <button type="submit" name="button">Submit</button>
        </form>
    </div>

    <div class="table_data">
      <table>
        <thead>
          <tr>
            <th>ID</th>
            <th>Groups Name</th>
            <th>Action</th>
          </tr>
        </thead>
        <tbody>
          <% group_data.forEach(group => { %>
            <tr>
              <td> <%= group.id %></td>
              <td> <%= group.name_of_group %></td>
              <td> <a href="/groups/edit/:id">Edit</a> <a href="/groups/delete/:id">Delete</a></td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
  </body>
</html>
