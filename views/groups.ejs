<center>
  <h1>Groups List</h1>
  <h3>Express JS dan SQLITE3 App</h3><br>
  <a href="../"><input type="submit" value="Home"></a> &nbsp;
  <!-- <a href="/contacts/add"><input type="submit" value="Add New Contact"></a><br> -->
  <table border='1'>
    <thead>
      <th width='25' align="center">No</th>
      <th width='50' align="center">Group ID</th>
      <th width='150'>Group Name</th>
      <th>Action</th>
    </thead>
    <% var i = 1;
    groups_list.forEach(getData => {

      %>

    <tr>
      <td align="center"><%= i %> <% i += 1 %></td>
      <td align="center"><%= getData.id %></td>
      <td><%= getData.group_name %></td>


      <td align='center'>
        <a href="/groups/edit/<%= getData.id %>"><input type="submit" value="Edit"></a>
        <a href="/groups/delete/<%= getData.id %>"><input type="submit" value="Delete"></a>
      </td>
    </tr>

    <% }) %>
    <tr>
      <td colspan="4" heigh="60" bgcolor="grey" align="center"><br>
        <form action="/groups" method="post">
          <input type="text" name="group_name" placeholder="Group Name">
          <input type="submit" value="Add New Group">
        </form>
      </td>
    </tr>
  </table>
</center>
